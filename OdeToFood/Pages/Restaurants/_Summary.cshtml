@using OdeToFood.Core
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">       
        <a class="btn btn-outline-dark"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in ">Click Here for Restaurant Details</i>
        </a>
        <a class="btn btn-outline-dark"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in ">Click Here for Editing Restaurant</i>
        </a>
        <a class="btn btn-outline-dark"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in ">Click Here for Deleting Restaurant</i>
        </a>
    </div>
</div>